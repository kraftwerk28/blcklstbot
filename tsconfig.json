{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noUncheckedIndexedAccess": true,
    // "noUnusedLocals": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src", "migrations", "*.js"],
  "exclude": ["src/captcha/index2.ts"]
}
